{block content}
<div id="banner">
    {if $user->isLoggedIn()}
        <div class="text-warning text-center p-1 m-0" n:block=title style="font-size: 150%; letter-spacing: 2px">
            <strong>ADMINISTRACE: Permanentka</strong>
            <a n:href="MembershipCard:default" class="btn btn-sm btn-success" style="float: right;">
                <i class="bi bi-arrow-left-circle-fill"></i> Zpět
            </a>
        </div>
        
    {/if}
</div>

<div id="content">
	
{if $user->isLoggedIn()}
    
    {* hlavní blok *}
    <div class="row"> 
        
        {* levý sloupec *}
        <div class="col-md-4"> 
            
            {* *** PERMANENTKA *** *}
            <div class="border border-1 p-2 mx-1 my-4" style="background-color: #eee;">
                <div style="font-size: 120%; font-weight: bold;">Permanentka</div>
                {form permanentkaForm}
                    <div class="mb-3 mt-3">{label id /}{input id}</div>
                    <div class="mb-3 mt-3">{label aktivita_id /}{input aktivita_id}</div>
                    <div class="mb-3 mt-3">{label nazev /}{input nazev}</div>
                    <div class="mb-3 mt-3">{label cena /}{input cena}</div>
                    <div class="mb-3 mt-3">{label platnost /}{input platnost}</div>
                    <div class="mb-3 mt-3">{label aktivni /}{input aktivni}</div>
                    <div class="mb-3 mt-3">{label vstupy /}{input vstupy}</div>
                    <div class="text-center">{input send}</div>
                {/form}
            </div> 
                        
        {* levý sloupec - konec*}
        </div> 
        
        {* prostřední sloupec *}
        <div class="col-md-4"> 
            {* *** TEST *** *}
            <div class="border border-1 p-2 mx-1 my-4" style="background-color: #eee;">
