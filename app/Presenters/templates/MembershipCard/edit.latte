        <div class="col-md-4"> 
            {* *** TEST *** *}
            <div class="border border-1 p-2 mx-1 my-4" style="background-color: #eee;">
                <div style="font-size: 120%; font-weight: bold;">Prázdné pole</div>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
            </div>

        {* pravý sloupec - konec*}
        </div> 
    
    {* hlavní blok - konec *}
    </div> 
        
{/if}
</div>

{if $user->isLoggedIn()}
    <script>
        let dataTableContact = new DataTable('#tbl-users', {
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/cs.json',
                "search": "Vyhledávání v tabulce:",
                "searchPlaceholder": "zadejte hledaný text"
            },
            order: [[0, 'desc']]
        });
        
    {ifset $data}
        function setDataToForm() {
            // uživatel
            $('#frm-permanentkaForm-id').val({$data->id});
            $('#frm-permanentkaForm-aktivita_id').val({$data->aktivita_id});
            $('#frm-permanentkaForm-nazev').val({$data->nazev});
            $('#frm-permanentkaForm-cena').val({$data->cena});
            $('#frm-permanentkaForm-platnost').val({$data->platnost});
            $('#frm-permanentkaForm-aktivni').val({$data->aktivni});
            $('#frm-permanentkaForm-vstupy').val({$data->vstupy});
        }       
        
        setDataToForm();
    {/ifset}
    </script>
{/if}

            